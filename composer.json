{
    "name": "rwp/plugin",
    "type": "wordpress-plugin",
    "description": "Wordpress Plugin Boilerplate with steroids!",
    "homepage": "https://github.com/WPBP/WordPress-Plugin-Boilerplate-Powered",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "RIESTER Advertising Agency",
            "email": "wordpress@riester.com",
            "homepage": "https://www.riester.com"
        }
    ],
    "require-dev": {
        "php": "^7.4",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "ergebnis/composer-normalize": "^2.6",
        "lipemat/wp-phpcs": "^2.3",
        "php-stubs/acf-pro-stubs": "^5.9",
        "php-stubs/wordpress-seo-stubs": "^17.2",
        "phpcompatibility/phpcompatibility-wp": "*",
        "phpro/grumphp-shim": "^1.5",
        "szepeviktor/phpstan-wordpress": "^0.7.5"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "phpro/grumphp-shim": true
        }
    },
    "autoload": {
        "psr-4": {
            "RWP\\Assets\\": "includes/assets/",
            "RWP\\Backend\\": "includes/backend/",
            "RWP\\Components\\": "includes/components/",
            "RWP\\Engine\\": "includes/engine/",
            "RWP\\Frontend\\": "includes/frontend/",
            "RWP\\Integrations\\": "includes/integrations/",
            "RWP\\Internals\\": "includes/internals/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "@composer normalize",
            "@dump-root"
        ],
        "codecept": [
            "vendor/bin/codecept"
        ],
        "codecept:acceptance": [
            "@codecept run acceptance"
        ],
        "codecept:all": [
            "@codecept:acceptance",
            "@codecept:functional",
            "@codecept:unit",
            "@codecept:wpunit"
        ],
        "codecept:functional": [
            "@codecept run functional"
        ],
        "codecept:unit": [
            "@codecept run unit"
        ],
        "codecept:wpunit": [
            "@codecept run wpunit"
        ],
        "dump-root": [
            "@composer dump-autoload -o -a"
        ],
        "dump-root-prod": [
            "@composer dump-autoload -o -a --no-dev"
        ],
        "dump-vendor": [
            "@composer dump-autoload --working-dir includes/dependencies -o --no-dev"
        ],
        "grum": [
            "./vendor/bin/grumphp run --tasks=git_blacklist"
        ],
        "install-codestandards": [
            "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
        ],
        "phpcs": [
            "vendor/bin/phpcs"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse --ansi --memory-limit=-1"
        ],
        "test": [
            "@grum"
        ]
    }
}
