{
	"debug": true,
	"plugins": [
		[
			"@semantic-release/commit-analyzer",
			{
				"releaseRules": [
					{
						"type": "docs",
						"scope": "README",
						"release": "patch"
					},
					{
						"type": "refactor",
						"scope": "core-*",
						"release": "minor"
					},
					{
						"type": "refactor",
						"release": "patch"
					},
					{
						"scope": "no-release",
						"release": false
					}
				]
			}
		],

		[
			"@semantic-release/release-notes-generator",
			{
				"linkReferences": false,
				"linkCompare": false,
				"writerOpts": {
					"groupBy": false,
					"headerPartial": "v{{version}}{{~#if date}} - {{date}}{{~/if}}\n-------------------",
					"commitPartial": "* {{header}}"
				}
			}
		],
		[
			"@semantic-release/changelog",
			{
				"changelogTitle": "RIESTERWP Core Changelog\n========================"
			}
		],
		[
			"@semantic-release/npm",
			{
				"npmPublish": false
			}
		],
		[
			"@semantic-release/exec",
			{
				"prepareCmd": "generate-readme readme --main-file rwp.php --dir docs/partials --read-more https://bitbucket.org/riester/rwp/src/master/CHANGELOG.md && generate-md"
			}
		],
		[
			"semantic-release-version-bump",
			{
				"files": "rwp.php"
			}
		],
		[
			"@semantic-release/git",
			{
				"assets": ["CHANGELOG.md", "package.json", "package-lock.json", "rwp.php", "readme.txt", "README.md"],
				"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
			}
		]
	],
	"branches": ["master"]
}
