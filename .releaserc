{
	"plugins": [
		[
			"@semantic-release/commit-analyzer",
			{
				"preset": "conventionalcommits",
				"parserOpts": {
					"mergePattern": "^Merge branch '([^']+)' of (.*)$",
					"mergeCorrespondence": [
						"branch",
						"source"
					],
					"issuePrefixes": [
						"RWP-"
					],
					"issueUrlFormat": "https://riester.atlassian.net/browse/{{prefix}}{{id}}"
				},
				"releaseRules": [
					{
						"type": "docs",
						"scope": "*README*",
						"release": "patch"
					},
					{
						"type": "docs",
						"scope": "*readme*",
						"release": "patch"
					},
					{
						"type": "refactor",
						"release": "patch"
					},
					{
						"scope": "no-release",
						"release": false
					}
				]
			}
		],
		[
			"@semantic-release/release-notes-generator",
			{
				"preset": "conventionalcommits",
				"linkReferences": false,
				"linkCompare": false,
				"writerOpts": {
					"groupBy": false,
					"headerPartial": "v{{version}}{{~#if date}} - {{date}}{{~/if}}\n-------------------",
					"commitPartial": "* {{header}}"
				}
			}
		],
		[
			"@semantic-release/changelog",
			{
				"changelogTitle": "RIESTERWP Core Changelog\n========================",
				"changelogFile": "changelog.txt"
			}
		],
		[
			"@semantic-release/release-notes-generator",
			{
				"preset": "conventionalcommits",
				"presetConfig": {
					"commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commits/{{hash}}",
					"compareUrlFormat": "{{host}}/{{owner}}/{{repository}}/compare/{{currentTag}}%0D{{previousTag}}#diff",
					"issueUrlFormat ": "{{host}}/{{owner}}/{{repository}}/issue/{{id}}"
				}
			}
		],
		[
			"@semantic-release/changelog",
			{
				"changelogTitle": "# RIESTERWP Core Changelog\n---"
			}
		],
		[
			"@semantic-release/npm",
			{
				"npmPublish": false
			}
		],
		[
			"@semantic-release/exec",
			{
				"prepareCmd": "generate-readme readme --main-file rwp.php --dir docs/partials --read-more CHANGELOG.md --changelog-length 3"
			}
		],
		[
			"@semantic-release/exec",
			{
				"prepareCmd": "generate-md"
			}
		],
		[
			"semantic-release-version-bump",
			{
				"files": "rwp.php"
			}
		],
		[
			"@semantic-release/git",
			{
				"assets": [
					"CHANGELOG.md",
					"package.json",
					"package-lock.json",
					"rwp.php",
					"readme.txt",
					"README.md"
				],
				"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
			}
		]
	],
	"branches": [
		"master"
	]
}
