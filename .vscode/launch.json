	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug main build",
			"program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",

			"args": [
				"--progress",
				"--color",
				"--name",
				"main",
				"--config-name",
				"public",
				"--config",
				"./webpack/webpack.config.main.js"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug blocks build",
			"program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",

			"args": [
				"--progress",
				"--color",
				"--configName",
				"blocks",
				"--config",
				"./webpack/webpack.config.blocks.js"
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug fonts build",
			"program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",

			"args": [
				"--progress",
				"--color",
				"--configName",
				"fonts",
				"--config",
				"./webpack/webpack.config.main.js"
			]
		}
	]
}
